<div class="card border-light bg-transparent m-3 col-12 col-sm-6 col-lg-3 ">
  <%= link_to list_path(list) do %>
    <% if list.photo.attached? %>
      <%= cl_image_tag list.photo.key, class: "card-img" %>
    <% else %>
      <%= image_tag list.movies.sample.poster_url, class: "card-img" %>
    <% end %>
    <p class="card-img-overlay card-title text-center"><%= list.name %></p>
  <% end %>
</div>
