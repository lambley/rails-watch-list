<div class="m-0 pt-3 pe-3 ps-3 d-flex align-items-center sticky-list-navbar">
  <div class="col">
    <h1 class="me-5"><%= @list.name %></h1>
    <p><%= link_to "back to all lists", lists_path, class: "btn btn-info" %></p>
  </div>
  <p>
    <%= link_to "+ movie", new_bookmark_path(list_id: @list.id), class: "btn btn-info col" %>
    <%= link_to @list.photo.attached? ? "edit photo" : "add photo", edit_list_path(@list), class: "btn btn-info col" %>
  </p>
</div>

<div class="me-3 ms-3 mt-3">
  <% @list.movies.each do |movie| %>
    <%= render 'shared/movies/card-lewagon', movie: movie %>
  <% end %>
</div>
