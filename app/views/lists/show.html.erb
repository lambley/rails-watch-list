<div class="m-0 pe-3 ps-3 d-flex align-items-center sticky-list-navbar">
  <div class="col">
    <h1 class="me-5"><%= @list.name %></h1>
    <p><%= link_to "back to all lists", lists_path, class: "btn btn-info" %></p>
  </div>
  <p><%= link_to "+ movie", list_bookmark_add_path(@list) , class: "btn btn-info col" %></p>
</div>

<div class="me-3 ms-3 mt-3">
  <% @list.movies.each do |movie| %>
    <%= render 'shared/movies/card-lewagon', movie: movie %>
  <% end %>
</div>
